<p id="notice"><%= notice %></p>

<h1><center>Locações</center></h1>

<table align="center" class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tipo loc</th>
      <th>Cliente</th>
      <th>Veículo</th>
      <th>Valor locação</th>
      <th>Data Cadastro</th>
      <th>Data Devolução</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.id %></td>
        <td><%= location.tipo_loc %></td>
        <td><%= location.client.nome %></td>
        <td><%= location.vehicle.nome %></td>
        <td><%= location.valor_loc %></td>
        <td><%= location.dt_cadastro.strftime("%d/%m/%Y") %></td>
        <td align="center">
          <% if location.dt_devolucao.nil? %>
            ---
          <% else %>
            <%= location.dt_devolucao.strftime("%d/%m/%Y") %>
          <% end %>
        </td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

