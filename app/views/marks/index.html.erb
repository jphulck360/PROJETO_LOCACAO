<p id="notice"><%= notice %></p>

<h1><center>Marcas</center></h1>

<table align="center" class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Marca desc</th>
      <th>Qtd de carros</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <% count=0 %>
      <tr>
        <td><%= mark.id %></td>
        <td><%= mark.marca_desc %></td>
        <td>
          <% @vehicles.each do |v| %>
            <% if v.mark_id == mark.id %>
              <% count+=1 %>
            <% end %>
          <% end %>  
          <%# count %>

          <%= link_to controller: "vehicles", action: "mostrar", mark_id: mark.id, target: "_blank" do %>
            <%= count %>
          <% end %>


        </td>
        <td><%= image_tag mark.photo.url, size:"50" %></td>
        <td><%= link_to 'Show', mark %></td>
        <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
        <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mark', new_mark_path %>
