<p id="notice"><%= notice %></p>

<h1><center>Clientes</center></h1>

<table align="center" class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Pais</th>
      <th>Cidade</th>
      <th>Endereco</th>
      <th>Status</th>
      <!-- <th>Registrado desde:</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.nome %></td>
        <td><%= client.telefone %></td>
        <td><%= client.pais %></td>
        <td>
          <% client.cidade %>
          <%= link_to "#{client.cidade}", "https://www.google.com.br/maps/place/#{client.cidade}", target: :_blank %>
        </td>
        <td><%= client.endereco %></td>
        <td><%= client.status %></td>
        <!-- <td><%# client.created_at.strftime("%d/%m/%Y") %></td> -->
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

