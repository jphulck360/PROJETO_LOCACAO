<p id="notice"><%= notice %></p>

<h1><center>Modelo de Carros</center></h1>

<table align="center" class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Modelo desc</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @model_cars.each do |model_car| %>
      <tr>
        <td><%= model_car.id %></td>
        <td><%= model_car.modelo_desc %></td>
        <td><%= image_tag model_car.photo.url, height: '50', width: '70' %></td>
        <td><%= link_to 'Show', model_car %></td>
        <td><%= link_to 'Edit', edit_model_car_path(model_car) %></td>
        <td><%= link_to 'Destroy', model_car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

